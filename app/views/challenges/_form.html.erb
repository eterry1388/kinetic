<%= form_with(model: challenge) do |form| %>
  <% if challenge.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
        <% challenge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <%= tag.div(style: "display: flex;", data: { controller: "markdown" }) do %>
    <div style="flex: 1; padding-right: 10px;">
      <%= form.label :description, style: "display: block" %>
      <%= form.textarea :description, data: { markdown_target: "input" }, rows: 30 %>
    </div>

    <div style="flex: 1; padding-left: 10px;">
      <%= form.label :preview, "Preview", style: "display: block" %>
      <%= tag.div(class: "preview", data: { markdown_target: "output" }) %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
